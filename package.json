{
	"name": "curso-dev",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run services:up && vite dev",
		"services:up": "docker compose -f infra/compose.yaml up -d",
		"services:stop": "docker compose -f infra/compose.yaml stop",
		"services:down": "docker compose -f infra/compose.yaml down",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --no-file-parallelism",
		"test:watch": "vitest watch --no-file-parallelism",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"migration:create": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development create",
		"migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@types/pg": "^8.11.2",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"dotenv": "^16.4.4",
		"dotenv-expand": "11.0.6",
		"node-pg-migrate": "^6.2.2",
		"pg": "^8.11.3",
		"ts-node": "^10.9.2"
	}
}
